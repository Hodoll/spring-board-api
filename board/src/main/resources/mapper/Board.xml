<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.spring.mapper.BoardMapper">

<select id="select" resultType="hashMap">
SELECT 
	    CONTENT_ID
	   ,CONTENT_NAME
  FROM CONTENTS
</select>

<select id="selectDetail" parameterType="com.board.spring.vo.BoardVO" resultType="hashMap">
SELECT 
	    CONTENT_ID
	   ,CONTENT_NAME
  FROM CONTENTS
 WHERE CONTENT_ID = #{CONTENT_ID} 
</select>

<insert id="add" parameterType="com.board.spring.vo.BoardVO">
INSERT INTO CONTENTS
     ( 	
       CONTENT_NAME
     )
VALUES
     ( 
       #{CONTENT_NAME}
     )	
</insert>

<update id="modify" parameterType="com.board.spring.vo.BoardVO">
UPDATE CONTENTS
   SET CONTENT_NAME = #{CONTENT_NAME}	
 WHERE CONTENT_ID = #{CONTENT_ID}
</update>  

<delete id="delete" parameterType="com.board.spring.vo.BoardVO">
DELETE 
  FROM CONTENTS	
 WHERE CONTENT_ID = #{CONTENT_ID}
</delete>  
</mapper>